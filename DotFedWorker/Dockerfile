FROM mcr.microsoft.com/dotnet/runtime:7.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["DotFedWorker.csproj", "./"]
RUN dotnet restore "DotFedWorker.csproj"
COPY . .
WORKDIR "/src/"
RUN dotnet build "DotFedWorker.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DotFedWorker.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DotFedWorker.dll"]
